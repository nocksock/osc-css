<style>
.graph {
  --bar-max-height: 50px;
  --bar-width: 10px;
  --bar-gap: 2px;
  --bar-count: 100;
  --padding: 2rem;
  display: flex;
  position: relative;
  align-items: center;
  border: 4px solid hsl(from var(--color-primary) h s calc(l * 0.8) / 10%);
  height: calc(var(--bar-max-height) * 2 + var(--padding));
  gap: var(--bar-gap);
  border-radius: 0.2rem;
  justify-content: center;

  .ball {
    /* --osc-state: paused; */
    --amp-y: calc(var(--bar-max-height) * var(--osc-amp));
    --ball-size: var(--bar-width);

    animation: var(--osc);
    /* --ball-height: calc(var(--osc-SIN)* var(--amp-y) * 2); */
    /* translate: calc(var(--bar-width) / -2); */
    /* height:  calc(10px + var(--osc-SIN) * var(--osc-amp) * var(--bar-max-height)); */
    translate: 0 calc(var(--osc-sin) * var(--osc-amp) * var(--bar-max-height));
  }
}


</style>

